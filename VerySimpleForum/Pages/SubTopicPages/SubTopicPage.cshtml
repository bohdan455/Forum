@page
@model VerySimpleForum.Pages.SubTopicPages.SubTopicPageModel
@{
}
<h1>@Model.SubTopic.Title</h1>
<h2>@Model.SubTopic.Likes</h2>
<p>@Model.SubTopic.Body</p>
<span>@Model.SubTopic.Created.ToUniversalTime()</span>
<h5>Likes:@{ @Model.SubTopic.LikesNumber} </h5>

<form method="post" asp-page="/SubTopicPages/LikeAction" asp-route-title="@Model.SubTopic.Title">
    <button type="submit" class="btn btn-primary" name="Test">Like</button>
</form>
<h1>Comments</h1>
@{
    var dictionary = new Dictionary<string, string>();
    dictionary.Add("title", Model.SubTopic.Title);
    dictionary.Add("body", Model.Comment?.Body);
}
<form method="post" asp-page="/SubTopicPages/CommentAction" asp-all-route-data="dictionary">
    <div>
        <label asp-for="Comment.Body">Content: </label> <br />
        <textarea asp-for="Comment.Body" class="form-control" rows="3"> </textarea>
    </div>
    <input type="submit" value="Submit" class="btn btn-primary" />
</form>